---
import Layout from "../layouts/Layout.astro";
import SwiperWrapper from "../components/Swiper";

const meta = {
  title: "The Beauty of Earth",
  description: "Photography from around the world.",
};
---

<Layout title={meta.title} description={meta.description}>
  <div
    style="animation: 2s ease-in bg-animation forwards;"
    class="bg-animation
   bg-[rgba(0,
    0,
    0,
    0.8)]
    pointer-events-none absolute inset-0
    z-20
    backdrop-blur-[40px]"
  >
  </div>

  <main
    class="flex h-full flex-col gap-8 bg-transparent px-4 pt-4 md:grid md:gap-12 md:px-8 md:pt-8 lg:grid-cols-3"
  >
    <div class="col-span-2 flex flex-col gap-4 lg:col-span-1 lg:gap-8">
      <h1
        class="z-10 px-4 text-center text-4xl font-bold md:p-0 md:text-left md:text-6xl"
        style="letter-spacing: -1.2px"
      >
        the beauty of earth
      </h1>
      <p class="description text-transparent-500 hidden md:block">
        images from around the world. <br />
         explore the beauty of our planet.
      </p>
    </div>

    <div class="col-span-2 h-full overflow-hidden pb-16 md:pb-2 lg:col-start-2">
      <SwiperWrapper client:load />
    </div>

    <footer class="fixed bottom-0 z-0 w-full">
      <div
        class="text-transparent-500 flex flex-col items-center justify-center py-4 text-xs lg:items-start"
      >
        <div class="flex items-center space-x-1">
          <span>Â© 2023</span>
          <a
            href="https://www.jomaendle.com"
            target="_blank"
            rel="preload"
            class="z-20 cursor-pointer underline underline-offset-1"
            >Johannes Maendle</a
          >
        </div>
      </div>
    </footer>
  </main>
</Layout>

<script src="../scripts/image-load.ts"></script>

<style>
  p.description {
    line-height: 18px;
  }

  @keyframes bg-animation {
    from {
      background-color: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(40px);
    }
    99% {
      z-index: 20;
    }
    to {
      background-color: transparent;
      backdrop-filter: blur(0px);
      z-index: -1;
    }
  }
</style>
 ```
